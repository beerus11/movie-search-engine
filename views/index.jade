extends layout
block content
    h1 Movies

    a(href="/movies/new") New Movie

    if albums
        table.table.table-striped
            thead
                tr
                    th Title
                    th Genre
                    th Rating
                    th Release Date
            tbody
                for movie in movies
                    tr
                    td = movie.movie_title
                    td = movie.movie_genre
                    td = movie.movie_rating
                    td = movie.movie_release_date
                        td: a(href="/movies/" + movie.id id="movie.movieId")= movie.movie_title
